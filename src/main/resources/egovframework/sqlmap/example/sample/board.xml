<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Sample">

	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="searchVO" type="egovframework.example.sample.service.SampleDefaultVO"/>
	<select id="selectNoticeListCnt" resultClass="int">
        <![CDATA[
            SELECT count(*)
            FROM notice
            where 1=1
        ]]>
	</select>
	<select id="selectNoticeList" resultClass="EgovMap">
        <![CDATA[
            SELECT *
            FROM notice
            where 1=1
            order by ndate desc
            limit #first# , #record#
        ]]>
	</select>

	<insert id="insertNotice">
		<![CDATA[
			INSERT INTO notice
				( title, 
				  text, 
				  ndate)
			VALUES ( 
				#title#, 
				#text#, 
				now())
		]]>
	</insert>
	<insert id="insertAsk">
		<![CDATA[
			INSERT INTO qna
				( name, 
				  midx, 
				  email,
				  text,
				  qdate)
			VALUES ( 
				#name#, 
				#midx#,
				#email#,
				#text#, 
				now())
		]]>
	</insert>
	<select id="selectNoticeDetail" resultClass="EgovMap">
        <![CDATA[
            SELECT *
            FROM notice
            where idx = #idx#
        ]]>
	</select>

	<delete id="deleteNotice">
	    <![CDATA[
            delete
            FROM notice
            where idx = #idx#
        ]]>
	</delete>
	<update id="updateNotice">
		<![CDATA[
			UPDATE notice
			SET title=#title#
				, text=#text#
			WHERE idx=#idx#
		]]>
	</update>

	<select id="selectFaqListCnt" resultClass="int">
        <![CDATA[
            SELECT count(*)
            FROM faq
            where 1=1
        ]]>
	</select>
	<select id="selectFaqList" resultClass="EgovMap">
        <![CDATA[
            SELECT *
            FROM faq
            where 1=1
            order by fdate desc
            limit #first# , #record#
        ]]>
	</select>

	<insert id="insertFaq">
		<![CDATA[
			INSERT INTO faq
				( title, 
				  text, 
				  fdate)
			VALUES ( 
				#title#, 
				#text#, 
				now())
		]]>
	</insert>
	<select id="selectFaqDetail" resultClass="EgovMap">
        <![CDATA[
            SELECT *
            FROM faq
            where idx = #idx#
        ]]>
	</select>
	<delete id="deleteFaq">
	    <![CDATA[
            delete
            FROM faq
            where idx = #idx#
        ]]>
	</delete>
	<update id="updateFaq">
		<![CDATA[
			UPDATE faq
			SET title=#title#
				, text=#text#
			WHERE idx=#idx#
		]]>
	</update>
		
	<select id="selectQnaListCnt" resultClass="int">
        <![CDATA[
            SELECT count(*)
            FROM qna
            where 1=1
            and midx = #idx#
        ]]>
	</select>
	<select id="selectQnaList" resultClass="EgovMap">
        <![CDATA[
            SELECT *
            FROM qna
            where 1=1
            and midx = #idx#
            order by qdate desc
            limit #first# , #record#
        ]]>
	</select>
	<select id="selectQnaDetail" resultClass="EgovMap">
        <![CDATA[
            SELECT *
            FROM qna
            where idx = #idx#
        ]]>
	</select>

	<update id="updateQnaAnswer">
		<![CDATA[
			UPDATE qna
			SET answer=#answer#
			,cdate = now()
			WHERE idx=#idx#
		]]>
	</update>
</sqlMap>
